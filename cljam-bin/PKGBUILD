# Maintainer: r6eve <r6eve at acm dot org>

pkgname=cljam-bin
pkgver=0.8.0
pkgrel=1
pkgdesc='A DNA Sequence Alignment/Map (SAM) library for Clojure'
arch=('x86_64')
url='https://github.com/chrovis/cljam'
license=('Apache')
# TODO: depends=('java-runtime-common')
provides=("${pkgname%-bin}")
conflicts=("${pkgname%-bin}")
source=("${url}/releases/download/${pkgver}/${pkgname%-bin}")
noextract=("${pkgname%-bin}")
sha256sums=('1090a80b24da12ddff1e003f0eae01c92bcddb38215d66618332ac19d36acf9f')

package() {
  install -Dm0755 -t "${pkgdir}/usr/bin/" "${pkgname%-bin}"
}
